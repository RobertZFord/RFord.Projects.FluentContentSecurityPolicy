<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Fluent CSP Builder</Title>
    <Authors>RobertZFord</Authors>
    <Company>N/A</Company>
    <Description>A simple fluent builder for CSP headers</Description>
    <PackageProjectUrl>https://github.com/RobertZFord/RFord.Projects.FluentContentSecurityPolicy</PackageProjectUrl>
    <RepositoryUrl>https://github.com/RobertZFord/RFord.Projects.FluentContentSecurityPolicy</RepositoryUrl>
    <PackageTags>fluent;content-security-policy;csp</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>
